<% if current_user.put_in?(product) %>
    <%= form_with(model: current_user.baskets.find_by(product_id: product.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :product_id, product.id %>
        <%= f.submit '削除', class: 'btn btn-danger btn-block' %>
    <% end %>
<% end %>