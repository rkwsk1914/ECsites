<%= form_with(model: product, local: true) do |form| %>
    <%= render 'layouts/error_message', model: product %>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :name, '製品名', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= form.text_field :name, class: 'form-control', placeholder: 'name' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :price, '価格', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= number_field :product, :price, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :stock, '在庫数', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= number_field :product, :stock, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <% form.label :picture, '価格', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <% file_field :picture, class: 'form-control', size: "30x10" %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :explanation, '製品説明', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= form.text_area :explanation, class: 'form-control', size: "30x3", placeholder: '製品説明' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <%= form.label :status, 'ステータス', class: 'col-form-label col-form-label' %>
        </div>
        <div class="col-sm-10">
            <%= form.select(:status) do %>
              <% [['SALE', 'SALE'], ['SOLD OUT', 'SOLD OUT'], ['入荷待ち', '入荷待ち'], ['END', 'END']].each do |c| -%>
                <%= content_tag(:option, c.first, value: c.last) %>
              <% end %>
            <% end %>
        </div>
    </div>
    <div class="form-group row d-flex justify-content-around">
        <%= form.submit '更新', class: 'btn btn-secondary btn-block col-3 offset-4' %>
        <%= render 'products/back_top_button' %>
    </div>
<% end %>