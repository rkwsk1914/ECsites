<h1>会員情報編集</h1>
<%= link_to 'マイページ', @user %>
<%= render 'products/back_top_button' %>
        <%= form_with(model: @user, local: true) do |form| %>
            <%= render 'layouts/error_message', model: @user %>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :name, 'Name', class: 'col-form-label col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.text_field :name, class: 'form-control', placeholder: 'Your Name' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :email, 'Email', class: 'col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.email_field :email, class: 'form-control', placeholder: 'example@exam.com' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :password, 'Password', class: 'col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.password_field :password, class: 'form-control', placeholder: '8文字以上のパスワード/ password is at least 8 characters.' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :password_confirmation, 'Confirmation', class: 'col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.password_field :password_confirmation, class: 'form-control', placeholder: '8文字以上のパスワード / password is at least 8 characters.' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :address, '登録住所', class: 'col-form-label col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.text_field :address, class: 'form-control', placeholder: 'Your Name' %>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <%= form.label :payment, '登録支払い方法【'+@user.payment.to_s+'】', class: 'col-form-label col-form-label' %>
                </div>
                <div class="col-sm-10">
                    <%= form.select(:payment) do %>
                      <% [['代金引換', '代金引換'], ['コンビニ・ATM・ネットバンキング・電子マネー払い', 'コンビニ・ATM・ネットバンキング・電子マネー払い'], ['クレジット払い', 'クレジット払い']].each do |c| -%>
                        <%= content_tag(:option, c.first) %>
                      <% end %>
                    <% end %>
                </div>
            </div>
            <div class="form-group row d-flex justify-content-around">
                <%= form.submit '更新', class: 'btn btn-secondary btn-block col-3 offset-4' %>
                <%= render 'products/back_top_button' %>
            </div>
        <% end %>